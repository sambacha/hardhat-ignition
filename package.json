{
  "name": "@tenderly/hardhat-ignition",
  "description": "Solidity IaC deployment tool",
  "version": "0.1.1",
  "author": "Tenderly",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "bugs": {
    "url": "https://github.com/nomiclabs/hardhat-ignition/issues"
  },
  "homepage": "https://github.com/nomiclabs/hardhat-ignition",
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nomiclabs/hardhat-ignition.git"
  },
  "scripts": {
    "compile": "tsc packages/ignition-core packages/ignition-hardhat-plugin packages/ignition-test",
    "build": "tsc -b packages/ignition-core packages/ignition-hardhat-plugin",
    "install:examples": "./bin/install_example_node_modules.sh",
    "install:tests": "./bin/install_tests_projects_node_modules.sh",
    "test": "node scripts/run-tests.js",
    "version": "oclif-dev readme && git add README.md",
    "hardhat:node": "cd example/synthetix && npx hardhat node",
    "lint": "wsrun --exclude-missing --serial lint",
    "lint:fix": "wsrun --exclude-missing --stages lint:fix",
    "clean": "wsrun --exclude-missing clean"
  },
  "types": "lib/index.d.ts",
  "type": "commonjs",
  "directories": {
    "doc": "docs",
    "example": "example",
    "lib": "lib",
    "test": "test"
  },
  "devDependencies": {
    "ts-node": "^9.1.1",
    "wsrun": "^5.2.4"
  },
  "dependencies": {
    "mocha": "^8.4.0"
  }
}
