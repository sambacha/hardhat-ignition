{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "target": "es2017",
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true,
    "strict": true,
  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/@types/node/index.d.ts",
    "lib"
  ],
  "include": [
    "src/**/*"
  ]
}
